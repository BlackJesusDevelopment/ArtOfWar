<div class="container-fluid pt-4 pb-4 bg-cus">
    <div class="w-25 container mx-auto">
        <form method="post" action="/handleregister">
            <div class="form-group">
                <label for="username">Benutzername</label>
                <input type="text" placeholder="Dein Benutzername" id="username" name="username"
                    class="form-control control-cus" required />
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" placeholder="Deine Email" id="email" name="email" class="form-control control-cus"
                    required />
            </div>
            <div class="form-group">
                <label for="password">Passwort</label>
                <input type="password" placeholder="Dein Passwort" id="password" name="password"
                    class="form-control control-cus {{#if error}} control-err{{/if}}" required />
            </div>
            <div class="form-group">
                <label for="repeatpassword">Passwort Wiederholen</label>
                <input type="password" placeholder="Wiederhole dein Passwort nocheinmal" name="repeatpassword"
                    id="repeatpassword" class="form-control control-cus {{#if error}} control-err{{/if}} " required />
                <small>Die Passwörter müssen übereinander Stimmen</small>
            </div>
            <button type="submit" class="btn btn-light mx-auto mt-3">Registieren</button>
        </form>
    </div>
</div>